<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>QuotingDojo</title>

   <!-- Required CSS Files -->
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
   <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
   <link rel="stylesheet" href="css/btmin.css.css">

   <style>
     .btn-lg { width: 7rem; padding: 1rem 0; font-size: 14px; }
     .body-bg { background-color: #777; }
      .card {
        display: flex;
        position: relative;
        display: -ms-flexbox;
        -ms-flex-direction: column;
        flex-direction: column;
        background-color: #f6f6f6;
        background-clip: border-box;
        border: 3px solid rgb(51, 48, 160);
        padding: 2rem 0rem 2rem 3rem !important;
        border-radius: 3.25rem;
      }
    </style>
</head>

<body class="body-bg">
   <!-- Navbar -->
   <div class="top-row row">
      <nav class="nav navbar navbar-dark bg-dark justify-content-end col-md-12">
         <a class="text-light nav-link" href="/">Home</a>
         <a class="text-light nav-link" href="/quotes">View Quotes</a>
      </nav>
   </div>

<!-- Main Container -->
    <div class="container">
      <div class="col-sm-10">
         <div class="row" style="margin-top: 10rem;">
            <div class="col-sm-8">
               <% if(typeof(errors) != 'undefined' ) { %>
                  <% for (var x in errors) { %>
                     <h3><%= errors[x].message %></h3>
                  <% } %>
               <% } %>
            </div>
         </div>

         <div class="card col-sm-10" style="padding:4rem 0rem 0rem 8rem;">
            <div class="row">
               <form class="col-10" action="/quotes" method="POST">
                <div class="row justify-content-center"><h1>Welcome to Quoting Dojo</h1></div>
                  <div class="form-group row">
                     <label class="text-muted col-sm-4 offset-1"><h4>Your name:</h4></label>
                     <div class="col-sm-7">
                        <input name="name" type="text" class="form-control">
                     </div>
                  </div>
                  <div class="form-group row">
                     <label for="inputPassword" class="text-muted col-sm-4 offset-1"><h4>Your quote:</h4></label>
                     <div class="col-sm-7">
                        <textarea name="quote" cols="30" rows="5"></textarea>
                     </div>
                  </div>
                  <div class="row offset-4" style="justify-content: space-evenly">
                    <button type="ubmit" class="btn btn-lg btn-success">Add my quote!</button>
                    <button type="submit" class="btn btn-lg btn-info">Skip to quotes!</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
    </div>
      <!-- Load Required Javascript Files -->
       <!-- Required CSS Files [ BOOTSTRAP 4 ] -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
      <script src="js/main.js" charset="utf-8"></script>
   </body>

</html>
